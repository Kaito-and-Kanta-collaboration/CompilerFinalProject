# create variables to store numbers
VAR a = 1
VAR b = 4


IF a < b THEN
    DISPLAY "a is smaller than b"
ENDIF

VAR c = 5
VAR d = 4

IF c < d THEN
    DISPLAY "c is smaller than d"
ENDIF

# create while loop statements

VAR e = 0
VAR f = 1

# do while loop 4 times

WHILE e < 5 REPEAT
    DISPLAY "do while loop"
    VAR e = f
    VAR g = f + e
    VAR f = g
ENDWHILE